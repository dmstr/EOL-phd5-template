{
    "name": "dmstr/phd5-template",
    "description": "phd5 app template",
    "minimum-stability": "stable",
    "require": {
        "wikimedia/composer-merge-plugin": "^2.0.1"
    },
    "extra": {
        "merge-plugin": {
            "require": [
                "./../src/composer.phd5.json"
            ]
        }
    },
    "repositories": {
        "ap": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "autoload": {
        "psr-4": {
            "project\\": "src"
        }
    },
    "config": {
        "vendor-dir": "./../vendor",
        "preferred-install": {
            "dmstr/*": "source",
            "hrzg/*": "source",
            "schmunk42/*": "source",
            "*": "auto"
        },
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "./../vendor/npm-asset",
                "bower-asset-library": "./../vendor/bower-asset"
            },
            "vcs-driver-options": {
                "github-no-api": true
            },
            "git-skip-update": "2 days",
            "pattern-skip-version": "(-build|-patch)",
            "optimize-with-installed-packages": false
        }
    }
}
